<?xml version='1.0' encoding='utf-8'?>
<widget id="com.reallifeanalytics.rlascreenapp" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>RLA Screen</name>
    <description>
        App for your RLA Screen
    </description>
    <author email="mauricio@reallifeanalytics.com" href="http://reallifeanalytics.com">
        Real Life Analytocs
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="icon.png" />
    <splash src="splash.png" />
    <allow-navigation href="http://*.rla.io/*" />
    <allow-navigation href="http://rla.io/*" />
    <allow-navigation href="http://192.168.1.56:3000" />
    <allow-navigation href="*" />
    <allow-navigation href="cdvfile://*" />
    <access origin="cdvfile://*" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="phonegap-version" value="cli-5.2.0" />
</widget>
