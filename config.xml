<?xml version='1.0' encoding='utf-8'?>
<widget id="com.reallifeanalytics.rlascreenapp" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>RLA Screen</name>
    <description>
        App for your RLA Screen
    </description>
    <author email="mauricio@reallifeanalytics.com" href="http://reallifeanalytics.com">
        Real Life Analytocs
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="setStatusBarHidden" value="true" />
    <preference name="UIViewControllerBasedStatusBarAppearance" value="false" />
    <icon src="icon.png" />
    <splash src="splash.png" />
    <preference name="phonegap-version" value="cli-5.2.0" />
    <plugin name="cordova-plugin-fastrde-injectview" spec="0.2.0" />
    <plugin name="cordova-plugin-file" spec="4.3.1" />
    <plugin name="cordova-plugin-file-transfer" spec="1.6.1" />
    <plugin name="cordova-plugin-fullscreen" spec="1.1.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.6.1" />
    <plugin name="cordova-plugin-insomnia" spec="4.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.1" />
    <plugin name="cordova-plugin-statusbar" spec="2.2.1" />
    <!-- <plugin name="cordova-plugin-remote-injection" spec="0.5.0" /> -->
    <allow-navigation href="http://*.rla.io/*" />
    <allow-navigation href="http://rla.io/*" />
    <allow-navigation href="http://192.168.1.56:3000" />
    <allow-navigation href="*" />
    <allow-navigation href="cdvfile://*" />
    <access origin="cdvfile://*" />
    <engine name="ios" spec="~4.3.1" />
</widget>